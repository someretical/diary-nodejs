{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"outDir": "./build",
		"removeComments": true,
		"lib": ["esnext", "DOM"],
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
